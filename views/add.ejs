<div>
    <%- partial('./pages/header.ejs') %>
    </div>
<div class="container">
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/meals/list">Food</a></li>
    <li class="breadcrumb-item active">Add</li>
</ol>
<h1 class="display-4">Add Recipe</h1>
<form action="/meals/create" method="post">
    <div class="form-group">
        <label for="ordername">Name</label>
        <input type="text" name="ordername" id="ordername" class="form-control" onkeypress='return ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 32))' placeholder="name" required min="2">
    </div>
    <div class="form-group">
            <label for="ordertype">Price</label>
            <input type="number" name="ordertype" id="ordertype" class="form-control" placeholder="price" min="1">
    </div>
    <div class="form-group">
            <label for="imageUrl">imageUrl</label>
            <input type = "text" name="imageUrl" id="imageUrl" class="form-control" placeholder="imageUrl" required>
    </div><br>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>
</div>