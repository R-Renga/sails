<div>
    <%- partial('./pages/header.ejs') %>
    </div>
<div class="container">
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/meals/list">meals</a></li>
    <li class="breadcrumb-item active">Edit</li>
</ol>
<h1 class="display-4">Edit Order</h1>
<form action="/meals/update?id=<%= order._id %>" method="post">
    <div class="form-group">
        <label for="ordername">Name</label>
        <input type="text" name="ordername" id="ordername" class="form-control" onkeypress='return ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122) || (event.charCode == 32))' value="<%= order.name %>" required>
    </div>
    <div class="form-group">
            <label for="ordertype">Price</label>
            <input type="number" name="ordertype" id="ordertype" class="form-control" value="<%= order.price %>" required min="1">
    </div>
    <div class="form-group">
            <label for="imageUrl">imageUrl</label>
            <input type="text" name="imageUrl" id="imageUrl" class="form-control" value="<%= order.imageUrl %>" required>
    </div><br>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>
</div>